@page "/Minesweeper"

<PageTitle>Minesweeper</PageTitle>

<h1>This is Minesweeper</h1>
<table class="connect4-grid">
    @for (int y = 0; y < 15; y++)
    {
        <tr>
            @for (int x = 0; x < 15; x++)
            {
                int localX = x; // Create local copies
                int localY = y;
                <td @onclick="() => Set(localX, localY)">
                    @Conn5[localX,localY]
                </td>
            }
        </tr>
    }
</table>
<h1>Status: @Conn5.Winner</h1>
<button class="btn btn-primary" @onclick="reset">reset</button>




@code{
    
    Connect5 Conn5 = new();//!!! Achtung darf nicht gleich wie die Page heißen sonst böse!!!!!!!!!!!

    private void Set(int x, int y)
    {
        if (Conn5.Winner == "No Winner / Draw")
        {
            Conn5.Set(x, y);
        }
    }

    public void reset()
    {
        Conn5 = new();
    }

    //protected string this[int i, int i1] => Conn4[i, i1];
}